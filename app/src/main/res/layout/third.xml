<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/ye"
    android:padding="20dp">

    <TextView
        android:id="@+id/ter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FeedBack"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/yar"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ter1"
        android:layout_marginTop="20dp"
        android:hint="Course Name"
        />

    <EditText
        android:id="@+id/yar2"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/yar"
        android:layout_marginTop="20dp"
        android:hint="Professor"
        />

    <AutoCompleteTextView
        android:id="@+id/yar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:layout_below="@id/yar2"
        android:layout_marginTop="20dp"
        android:hint="Grading Type(Good,Bad)"
        />

    <AutoCompleteTextView
        android:id="@+id/yar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yar3"
        android:layout_marginTop="20dp"
        android:completionThreshold="1"
        android:hint="Work Load(chill/Fighter)"
        />

    <EditText
        android:id="@+id/yar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yar4"
        android:layout_marginTop="20dp"
        android:hint="Your CG while taking the course"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/View2"
        android:text="Submit"
        android:onClick="Cha"
        android:layout_marginTop="20dp"
        android:layout_below="@id/yar5"
        />


</RelativeLayout>
